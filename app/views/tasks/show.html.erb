<% if flash[:notice] %>
  <div class="alert alert-success alert-dismissible fade show px-4" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<div class="container p-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= render @task %>
      
      <div class="mt-3 d-flex">
        <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary" %>
        <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary mx-2" %>
        <%= button_to "Destroy this task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

